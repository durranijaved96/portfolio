---
import Section from "./Section.astro";

interface DesignProps {
  name: string;
  summary?: string;
  image?: string;
  linkFigma?: string;
  linkPreview?: string;
}
const { designs = [] } = Astro.props as { designs: DesignProps[] };
---

<Section text="Designs" href="designs">
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5 md:gap-6">
    {designs.map((d) => (
      <article
        class="group rounded-2xl border border-black/10 dark:border-white/10
               bg-white/70 dark:bg-white/[0.03] backdrop-blur-md
               p-4 shadow-sm hover:shadow-lg transition"
      >
        <div class="relative mb-3 aspect-video overflow-hidden rounded-xl ring-1 ring-black/10 dark:ring-white/10">
          <img
            src={d.image}
            alt={d.name}
            class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.03]"
            loading="lazy"
          />
        </div>

        <h3 class="font-semibold">{d.name}</h3>
        {d.summary && (
          <p class="mt-1 line-clamp-2 text-sm text-slate-600 dark:text-slate-300">{d.summary}</p>
        )}

        <div class="mt-3 flex items-center gap-2">
          {d.linkFigma && (
            <a
              href={d.linkFigma}
              target="_blank" rel="noopener noreferrer"
              class="text-sm rounded-lg px-3 py-1.5 bg-[#F24E1E]/10 text-[#F24E1E] hover:bg-[#F24E1E]/20 transition"
            >
              Figma
            </a>
          )}
          {d.linkPreview && (
            <a
              href={d.linkPreview}
              target="_blank" rel="noopener noreferrer"
              class="text-sm rounded-lg px-3 py-1.5 bg-black/5 dark:bg-white/10 hover:bg-black/10 dark:hover:bg-white/20 transition"
            >
              Live Preview
            </a>
          )}
        </div>
      </article>
    ))}
  </div>
</Section>
