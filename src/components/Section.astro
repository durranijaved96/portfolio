---
interface Props {
  text: string;
  href?: string; // used for id + anchor
  class?: string;
}
const { text, href = "", class: className = "" } = Astro.props as Props;
---

<section id={href || undefined} class={`mx-auto max-w-6xl py-10 md:py-14 ${className}`}>
  <div class="mb-6 flex items-center justify-between">
    <h2 class="text-xl md:text-2xl font-semibold tracking-tight">{text}</h2>

    {href && (
      <a
        href={`#${href}`}
        class="text-sm text-slate-500 dark:text-slate-400 hover:underline"
        aria-label={`Link to ${text} section`}
      >
        #
      </a>
    )}
  </div>

  <!-- Let the consumer decide layout (grid, flex, etc.) -->
  <slot />
</section>
