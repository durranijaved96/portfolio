---
import Section from "./Section.astro";
const { description, image, name } = Astro.props;
---

<Section text="About" href="about">
  <div class="grid gap-8 md:grid-cols-[1fr,280px] md:items-start">
    <p class="text-base text-slate-700 dark:text-slate-300">{description}</p>

    <div class="justify-self-center md:justify-self-end">
      <div class="h-72 w-56 rotate-3 bg-white p-4 shadow-xl ring-1 ring-black/10 dark:bg-white/5 dark:ring-white/10">
        <img src={image} alt={name} class="h-full w-full object-cover" loading="lazy" />
      </div>
    </div>
  </div>
</Section>
